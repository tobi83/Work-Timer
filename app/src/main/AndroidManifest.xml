<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.mack_itservice.work_timer" >

    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@drawable/icon_itservice_192x192" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--  Die Activity "Einstellungen" -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settingsActivity">
        </activity>

        <!--  Die Activity "Berichte" -->
        <activity
            android:name=".ReportsActivity"
            android:label="@string/title_reportsActivity">
        </activity>

    </application>

</manifest>
